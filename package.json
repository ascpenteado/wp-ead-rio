{
  "name": "wp-ead-rio",
  "version": "1.0.0",
  "description": "WordPress EAD Rio project with Docker Compose",
  "scripts": {
    "dev": "ddev start",
    "dev:down": "ddev stop",
    "dev:stop": "ddev stop",
    "dev:restart": "ddev restart",
    "dev:logs": "ddev logs -f",
    "dev:logs:wp": "ddev logs -f -s web",
    "dev:logs:db": "ddev logs -f -s db",
    "dev:shell": "ddev ssh",
    "dev:db": "ddev sequelace",
    "dev:build": "echo 'DDEV handles build automatically'",
    "dev:clean": "ddev delete -O",
    "theme:dev": "cd web/wp-content/themes/ead-rio && pnpm run dev",
    "theme:build": "cd web/wp-content/themes/ead-rio && pnpm run build",
    "theme:watch": "cd web/wp-content/themes/ead-rio && pnpm run watch",
    "prod": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:build": "docker-compose -f docker-compose.prod.yml build"
  },
  "devDependencies": {},
  "author": "EAD Rio",
  "license": "ISC"
}
