{
  "name": "ead-rio",
  "version": "1.0.0",
  "description": "EAD Rio child theme for Hello Elementor",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:css": "sass assets/styles/main.scss:dist/css/style.css components:dist/css/components --style=compressed --source-map --load-path=assets/styles",
    "build:css:dev": "sass assets/styles/main.scss:dist/css/style.css components:dist/css/components --style=expanded --source-map --load-path=assets/styles",
    "build:ts": "tsc",
    "build:ts:dev": "tsc --sourceMap",
    "build:components": "sass components:dist/css/components --style=compressed --source-map --load-path=assets/styles",
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:css\" \"browser-sync start --config bs-config.js\"",
    "serve": "browser-sync start --config bs-config.js",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:css\"",
    "watch:css": "sass assets/styles/main.scss:dist/css/style.css components:dist/css/components --watch --style=expanded --source-map --load-path=assets/styles",
    "watch:ts": "tsc --watch",
    "watch:components": "sass components:dist/css/components --watch --style=expanded --source-map --load-path=assets/styles",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/"
  },
  "author": "EAD Rio",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.5.2",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "sass": "^1.92.1",
    "typescript": "^5.9.2"
  }
}
